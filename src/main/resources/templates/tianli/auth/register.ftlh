        },
				rulesRef: {
					username: [
						{ required: true, whitespace: true,  message: 'ç”¨æˆ·åå¿…å¡« ğŸ¥´' },
						{ max: 60, message: 'ç”¨æˆ·åå¤ªé•¿å•¦ ğŸ¤¯' },
						{
							validator: async (rule, value) => {
								if (/^(?!null$|undefined$|^$).+/.test(value)) {
									try {
										const { data } = await axiosInstance.post('getAccountByUsername', null, { params: { username: value } })
										if(data) return Promise.reject('è¯¥ç”¨æˆ·åå·²å­˜åœ¨ ğŸ˜®â€ğŸ’¨');
